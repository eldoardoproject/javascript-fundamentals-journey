// Variabel untuk menyimpan angka
let angkaPertama = 26;
let angkaKedua = 10;
let hasilPenjumlahan;

// operasi penjumlahan
hasilPenjumlahan = angkaPertama + angkaKedua;

console.log("Angka pertama:", angkaPertama);
console.log("Angka kedua:", angkaKedua);
console.log("Hasil penjumlahan:", hasilPenjumlahan);

// Penjumlahan langsung tdk dgn var
console.log("5 + 3 =", 5 + 3);

// Variabel dengan nilai baru
let a = 15;
let b = 7;
let total = a + b;

console.log(`${a} + ${b} = ${total}`);

// Function penjumlahan dua angka
function jumlahkan(angka1, angka2) {
  return angka1 + angka2;
}

console.log("Hasil dari 20 + 30 =", jumlahkan(20, 30));
console.log("Hasil dari 100 + 250 =", jumlahkan(100, 250));
